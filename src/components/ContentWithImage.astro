---
export interface Props {
  image: string;
}

const { image } = Astro.props;
---
<div class="hero h-screen container">
  <div class="hero-content flex-col lg:flex-row-reverse">
      <img src={image} class="rounded-lg shadow-2xl w-4/5 md:w-4/5 lg:w-1/3 xl:w-2/5 2xl:w-3/5" />
    <div class="prose lg:prose-xl">
      <slot />
    </div>
  </div>
</div>
